<form action="{{ path('app_event_delete', { id: event.id }) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?')">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button type="submit" class="delete"><i class="fa-solid fa-circle-xmark"></i> Supprimer</button>
</form>
